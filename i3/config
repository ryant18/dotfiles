exec ~/.scripts/startup

set $caps Mod1
set $windows Mod4
set $space Mod5

font pango:monospace 9
focus_follows_mouse no
focus_wrapping no

new_window pixel 3

bindsym $caps+backslash exec "st"
bindsym $caps+bracketright exec "google-chrome"

bindsym $caps+w kill

bindsym $caps+d exec --no-startup-id i3-dmenu-desktop

bindsym $caps+h focus left
bindsym $caps+j focus down
bindsym $caps+k focus up
bindsym $caps+l focus right

bindsym $caps+minus split toggle

bindsym $caps+1 workspace 1
bindsym $caps+2 workspace 2
bindsym $caps+3 workspace 3
bindsym $caps+4 workspace 4
bindsym $caps+5 workspace 5
bindsym $caps+6 workspace 6
bindsym $caps+7 workspace 7
bindsym $caps+8 workspace 8
bindsym $caps+9 workspace 9
bindsym $caps+0 workspace 10


# exit i3 (logs you out of your X session)
bindsym $windows+q exec "i3-nagbar -t warning -m 'Shutdown?' -b 'Shutdown' 'sudo shutdown now' -b 'Reboot' 'sudo reboot now'"

# lock the screen
bindsym $windows+l exec "i3lock-fancy -t '' -n"

# change brightness
bindsym $windows+XF86MonBrightnessDown exec "sudo /home/ryan/.scripts/brightnessdown"
bindsym $windows+XF86MonBrightnessUp exec "sudo /home/ryan/.scripts/brightnessup"



bindsym $caps+m mode "move"
mode "move" {
  bindsym $space+Escape mode "default"

  bindsym $caps+1 move container to workspace 1; workspace 1; mode "default"
  bindsym $caps+2 move container to workspace 2; workspace 2; mode "default"
  bindsym $caps+3 move container to workspace 3; workspace 3; mode "default"
  bindsym $caps+4 move container to workspace 4; workspace 4; mode "default"
  bindsym $caps+5 move container to workspace 5; workspace 5; mode "default"
  bindsym $caps+6 move container to workspace 6; workspace 6; mode "default"
  bindsym $caps+7 move container to workspace 7; workspace 7; mode "default"
  bindsym $caps+8 move container to workspace 8; workspace 8; mode "default"
  bindsym $caps+9 move container to workspace 9; workspace 9; mode "default"
  bindsym $caps+0 move container to workspace 10 workspace 10; mode "default"

  bindsym $caps+h move left; mode "default"
  bindsym $caps+j move down; mode "default"
  bindsym $caps+k move up; mode "default"
  bindsym $caps+l move right; mode "default"
}


bindsym $caps+r mode "resize"
mode "resize" {
  bindsym $space+Escape mode "default"

  # resize windows
  bindsym $caps+h resize shrink width 2 px or 2 ppt
  bindsym $caps+j resize shrink height 2 px or 2 ppt
  bindsym $caps+k resize grow height 2 px or 2 ppt
  bindsym $caps+l resize grow width 2 px or 2 ppt
}



bindsym $caps+space mode "external"
mode "external"{
  bindsym $space+Escape mode "default"
}


bar {
        status_command i3blocks
        position top
}
