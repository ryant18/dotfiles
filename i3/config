exec ~/.scripts/startup

set $caps Mod1
set $windows Mod4
set $space Mod5

font pango:monospace 9
focus_follows_mouse no
focus_wrapping no

new_window pixel 3

bindsym $caps+$space+Return exec "st"
bindsym $caps+$space+backslash exec "google-chrome"

bindsym $caps+$space+w kill

bindsym $caps+$space+d exec --no-startup-id i3-dmenu-desktop

bindsym $caps+$space+h focus left
bindsym $caps+$space+j focus down
bindsym $caps+$space+k focus up
bindsym $caps+$space+l focus right

bindsym $caps+$space+minus split toggle

bindsym $caps+$space+1 workspace 1
bindsym $caps+$space+2 workspace 2
bindsym $caps+$space+3 workspace 3
bindsym $caps+$space+4 workspace 4
bindsym $caps+$space+5 workspace 5
bindsym $caps+$space+6 workspace 6
bindsym $caps+$space+7 workspace 7
bindsym $caps+$space+8 workspace 8
bindsym $caps+$space+9 workspace 9
bindsym $caps+$space+0 workspace 10


# exit i3 (logs you out of your X session)
bindsym $windows+q exec "i3-nagbar -t warning -m 'Shutdown?' -b 'Shutdown' 'sudo shutdown now' -b 'Reboot' 'sudo reboot now'"

# lock the screen
bindsym $windows+l exec "i3lock-fancy -t '' -n"

# change brightness
bindsym $windows+XF86MonBrightnessDown exec "sudo /home/ryan/.scripts/brightnessdown"
bindsym $windows+XF86MonBrightnessUp exec "sudo /home/ryan/.scripts/brightnessup"



bindsym $caps+$space+m mode "move"
mode "move" {
  bindsym $space+Escape  mode "default"

  bindsym $caps+$space+1 move container to workspace 1; workspace 1; mode "default"
  bindsym $caps+$space+2 move container to workspace 2; workspace 2; mode "default"
  bindsym $caps+$space+3 move container to workspace 3; workspace 3; mode "default"
  bindsym $caps+$space+4 move container to workspace 4; workspace 4; mode "default"
  bindsym $caps+$space+5 move container to workspace 5; workspace 5; mode "default"
  bindsym $caps+$space+6 move container to workspace 6; workspace 6; mode "default"
  bindsym $caps+$space+7 move container to workspace 7; workspace 7; mode "default"
  bindsym $caps+$space+8 move container to workspace 8; workspace 8; mode "default"
  bindsym $caps+$space+9 move container to workspace 9; workspace 9; mode "default"
  bindsym $caps+$space+0 move container to workspace 10 workspace 10; mode "default"

  bindsym $caps+$space+h move left
  bindsym $caps+$space+j move down
  bindsym $caps+$space+k move up
  bindsym $caps+$space+l move right
}


bindsym $caps+$space+r mode "resize"
mode "resize" {
  bindsym $space+Escape mode "default"

  # resize windows
  bindsym $caps+$space+h resize shrink width 2 px or 2 ppt
  bindsym $caps+$space+j resize shrink height 2 px or 2 ppt
  bindsym $caps+$space+k resize grow height 2 px or 2 ppt
  bindsym $caps+$space+l resize grow width 2 px or 2 ppt
}

bar {
        status_command i3blocks
        position top
}
